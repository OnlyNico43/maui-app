<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="{StaticResource White}"
    Title="Tap 2 Pay"
    x:Class="PayBuddy.PaymentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid Padding="20" RowSpacing="10">
            <!--  Navigation Back Button  -->
            <HorizontalStackLayout HorizontalOptions="Start" VerticalOptions="Start">
                <Button
                    BackgroundColor="Transparent"
                    Clicked="OnBackButtonClicked"
                    FontSize="20"
                    Text="←"
                    TextColor="{StaticResource Black}" />
            </HorizontalStackLayout>

            <!--  Main Content  -->
            <VerticalStackLayout Spacing="20" VerticalOptions="Center">
                <!--  NFC Animation / Icon  -->
                <Frame
                    BackgroundColor="{Binding NFCIconColor}"
                    CornerRadius="60"
                    HeightRequest="120"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="120">
                    <Image
                        HeightRequest="60"
                        Source="nfc_icon.png"
                        WidthRequest="60" />
                </Frame>

                <!--  Status Message  -->
                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="{Binding StatusMessage}"
                    TextColor="{StaticResource Black}" />

                <!--  Amount Display (Visible on Success)  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsAmountVisible}"
                    Text="{Binding PaymentAmount}"
                    TextColor="{StaticResource Magenta}" />
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
